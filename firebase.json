{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/images/**",
        "destination": "/public/images/$1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
